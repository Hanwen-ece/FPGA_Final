{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug OpenCL GPU",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/histogram_gpu.exe",
      "args": [
        "1920",
        "1080",
        "0"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build OpenCL GPU"
    },
    {
      "name": "Debug OpenCL GPU (Optimized)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/histogram_gpu.exe",
      "args": [
        "1920",
        "1080",
        "1"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build OpenCL GPU"
    },
    {
      "name": "Debug CPU",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/histogram_cpu.exe",
      "args": [
        "1920",
        "1080"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
